    <style>
        /* Style for the container */
        .button-container {
            display: flex;
            justify-content: space-around; /* Adjust as needed */
        }

        /* Style for the big buttons */
        .big-button {
            display: inline-block;
            width: 500px;
            height: 100px;
            background-color: #007bff; /* Blue color, change as needed */
            color: #fff;
            text-align: center;
            line-height: 100px;
            font-size: 24px;
            text-decoration: none;
            border-radius: 10px;
            border: 2px solid #007bff; /* Same as background color */
            margin: 0 10px; /* Adjust spacing between buttons */
        }

            /* Hover effect */
            .big-button:hover {
                background-color: #0056b3; /* Darker shade of blue */
            }

        .table-container {
            margin: 0 auto; /* Center horizontally */
            width: 80%; /* Set the width of the container */
            margin-top: 20px; /* Add space between button container and table container */
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            border-bottom: 1px solid #A9A9A9;
        }

        th {
            background-color: #36454F;
        }


        /* CSS style to add border around elements */
        .bordered-element {
            border: 1px solid #ffffff; /* 1px solid black border */
            padding: 10px; /* Add some padding for better appearance */
        }

              /* CSS style to put elements with borders horizontally next to each other */
        .container {
            overflow: auto; /* Clear the floats */
        }

        .element {
            border: 1px solid #ffffff; /* Border around each element */
            float: left; /* Float elements to the left */
            margin-right: 10px; /* Add some spacing between elements */
            padding: 10px; /* Add padding */
        }

        .clear {
            clear: both; /* Clear floats */
        }
 
    </style>
</head>
